<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Pages.IngredientPage">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Title"/>
            <Entry Text="{Binding Ingredient.Name}" />
            <Label Text= "Type"/>
            <Entry Text="{Binding Ingredient.Type}" />
            <Label Text= "Quantity"/>
            <Entry Text="{Binding Ingredient.Quantity}" />

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>