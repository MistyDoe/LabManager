<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Pages.ManagePlantPage"
             Title="Manage Plants">
    <VerticalStackLayout>
        <Label Text="New Plant"/>
        <Entry Text="{Binding Plant.Name}" Placeholder="Plant name"/>
        <Entry Keyboard="Numeric" Text="{Binding Plant.StoredQt}"  Placeholder="Currently stored "/>
        <Label Text="For Sale"/>
        <Switch  Toggled="OnSaleChecked"/>
        <Label Text="In Tissue Culture"/>
        <Switch Toggled="OnTSChecked"/>
        <Button Text="Save" Clicked="OnSaveButtonClicked"/>
        <Button Text="Delete" Clicked="OnDeleteButtonClicked"/>
        <Button Text="Cancel" Clicked="OnCancelButtonClicked"/>

    </VerticalStackLayout>
</ContentPage>