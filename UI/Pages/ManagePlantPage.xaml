<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Pages.ManagePlantPage"
             Title="Manage Plants">
    <VerticalStackLayout>
        <Label Text="New Plant"/>
        <Entry Text="{Binding Name}" Placeholder="Plant name"/>
        <Entry Keyboard="Numeric" Text="{Binding StoredQt}"  Placeholder="Currently stored "/>
        <Label Text="For Sale"/>
        <CheckBox IsChecked="{Binding ForSale}"/>
        <Label Text="In Tissue Culture"/>
        <CheckBox IsChecked="{Binding InTS}"/>
        <Button Text="Save" Clicked="OnSaveButtonClicked"/>
        <Button Text="Delete" Clicked="OnDeleteButtonClicked"/>
        <Button Text="Cancel" Clicked="OnCancelButtonClicked"/>

    </VerticalStackLayout>
</ContentPage>