<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model ="clr-namespace:UI.Model"
             x:Class="UI.MainPage">
    <CollectionView>
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type model:Plant}">
                <model:Plant
                Name="Philodendrom florida Ghost"
               />
                <model:Plant
                Name="Philodendron White Knight"
               />
                <model:Plant
                Name="Alocasia Infernalis"
               />
                    </x:Array>
                
          </CollectionView.ItemsSource>

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Plant">
                <HorizontalStackLayout Padding="10">
                    <Label VerticalOptions="Center" TextColor="Gray">
                        <Label.Text>
                            <MultiBinding StringFormat="{}{0}">
                                <Binding Path="Name" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>
</ContentPage>
