<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem    Text="Add plant" Clicked="OnAddPlantClicked"/>

    </ContentPage.ToolbarItems>
    <CollectionView x:Name="collectionView"
                    SelectionMode="Single"
                    SelectionChanged="OnSelectionChanged">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Label Text="{Binding Name}" FontSize="Small" TextColor="AntiqueWhite"/>
                <Label Text="{Binding StoredQt}" FontSize="Small" TextColor="AntiqueWhite"/>
                <Label Text="{Binding ForSale}" FontSize="Small" TextColor="AntiqueWhite"/>
                <Label Text="{Binding QtInTS}" FontSize="Small" TextColor="AntiqueWhite"/>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
